        <text class="title">{{item.cateName}}:{{item.title}}</text>
        <view class="subtitle">
          <text>{{item.updateTime}}:{{item.createFrom}}</text>

        </view>   -->

<i-card title="{{item.title}}" extra="目录:{{item.cateName}}" thumb="{{item.avatar}}">
    <view slot="content">来自:{{item.createFrom}}</view>
