</view>
<view hidden="{{htmlDisplay}}">
<htmltowxml type="html" text="{{ context }}" bindWxmlTagATap="wxmlTagATap" ></htmltowxml>
</view>
</i-modal>
<i-modal title="纵向排列的按钮" visible="{{ visible6 }}" actions="{{ actions4 }}" action-mode="{{ vertical }}" bind:click="handleClick4"></i-modal>

<i-drawer mode="right" visible="{{showRight1}}" bind:close="toggleRight1">
    <view class="demo-container">
  <i-button bind:click="addTitle" type="background"><i-icon type="document_fill" size="30" color="#80848f" />
标题</i-button>
<i-button bind:click="uploadPic" type="background"><i-icon type="offline_fill" size="30" color="#80848f" />
字体加厚</i-button>
<i-button bind:click="uploadPic" type="background"><i-icon type="enter" size="30" color="#80848f" />
字体变斜</i-button>
    <i-button bind:click="uploadPic" type="background"><i-icon type="other" size="30" color="#80848f" />
无序列表</i-button>
<i-button bind:click="uploadPic" type="background"><i-icon type="keyboard" size="30" color="#80848f" />
有序列表</i-button>
    <i-button bind:click="uploadPic" type="background"><i-icon type="picture_fill" size="30" color="#80848f" />
图片</i-button>
    </view>
</i-drawer>